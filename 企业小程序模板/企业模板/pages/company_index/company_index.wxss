.down{width: 40rpx; height: 40rpx;  margin-top: 20rpx; animation: mymove 2s infinite; -webkit-animation: mymove 2s infinite}

.sm_icon {
  height: 35rpx;
  width: 30rpx;
  margin-right: 8rpx;
  position: relative;
  top: 2px;
}
@keyframes mymove
{
  0% {transform: scale(1)  translateY(0px); opacity: 0.6;}
  50%{transform: scale(1.1) translateY(8px);opacity: 1}
  100%{transform: scale(1) translateY(0px);opacity: 0.6}
}

@-webkit-keyframes mymove 
{
  0% {-webkit-transform: scale(1)  translateY(0px); opacity: 0.6;}
  50%{-webkit-transform: scale(1.1) translateY(8px);opacity: 1}
  100%{-webkit-transform: scale(1) translateY(0px);opacity: 0.6}
}
