.goods {
  display: flex;
  position: fixed;
  width: 100%;
  top: 90rpx;
  border-top: 1px solid #eeeeee;
  overflow: hidden;
  font-family:"微软雅黑";
}

.goods .menu-wrapper {
  flex: 0 0 80px;
  width: 80px;
  background: #ffffff;
}

.goods .menu-wrapper .menu-item {
  display: table;
  width: 100%;
  text-indent: 0;
  line-height: 1.2em;
  padding: 10px 8px;
  min-height: 54px;
  box-sizing: border-box;
}

.goods .menu-wrapper .menu-item:current {
  position: relative;
  z-index: 10;
  margin-top: -1px;
  background: #fff;
  font-weight: 700;
}

.goods .menu-wrapper .menu-item:current .text {
  border: none;
}

.goods .menu-wrapper .menu-item .icon {
  display: inline-block;
  width: 12px;
  height: 12px;
  vertical-align: top;
  margin-right: 4px;
  background-size: 12px 12px;
  background-repeat: no-repeat;
}

.goods .menu-wrapper .menu-item .text {
  display: table-cell;
  width: 100%;
  vertical-align: middle;
  position: relative;
  font-size: 0.9em;
  
}
 .foods-wrapper {
  flex: 1;
  position: fixed; top: 80rpx;
  background-color: #ffffff;
}

 .foods-wrapper .food-list .title {
  padding-left: 14px;
  font-size: 1.2em;
  font-weight: bold;
  color: #333333;
  padding: 10rpx 0;
  text-align: center;
  position: relative;
  margin-top: 14rpx;
}
 .foods-wrapper .food-list .title text{position: relative;}
 .foods-wrapper .food-list .title text::after{
 position: absolute;
 content: '';
 height: 50%;
 width: 4px; background-color: #333333;
 left: -25px;
 top: 25%;
}
.foods-wrapper .food-list .title text::before{
 position: absolute;
 content: '';
 height: 50%;
 width: 4px; background-color: #333333;
 right: -25px;
 top: 25%;
}
.food-list{background-color: #ffffff;}
.foods-wrapper .food-list .food-item {
  display: flex;
  margin: 14rpx 25rpx 24rpx 25rpx;
  padding: 15rpx 20rpx;
  position: relative;
  box-shadow: 0 0 10px 0 #eeeeee;
  background-color:#ffffff;

}
.bz_img{margin: 0 25rpx; box-sizing: border-box; }

 .foods-wrapper .food-list .food-item:last-child {
  border: none;
  margin-bottom: 0px;
}

 .foods-wrapper .food-list .food-item .icon {
  width: 150rpx; height: 150rpx;
  margin-right: 10px;
}

 .foods-wrapper .food-list .food-item .content {
  flex: 1;
  align-content:space-between;
display:flex;
flex-wrap:wrap;
}

 .foods-wrapper .food-list .food-item .content .name {
  margin: 0;
  font-size: 1em;
  
  
  color: rgb(7, 17, 27);
}

 .foods-wrapper .food-list .food-item .content .desc, .extra {
  font-size: 10px;
  line-height: 10px;
  color: rgb(147, 153, 159);
}

 .foods-wrapper .food-list .food-item .content .desc {
  margin-bottom: 8px;
  line-height: 12px;
}

 .foods-wrapper .food-list .food-item .content .extra .count {
  margin-right: 12px;
}

 .foods-wrapper .food-list .food-item .content .price {
  color: #9a9a9a;
  flex: 1;
  position: relative;
}

 .foods-wrapper .food-list .food-item .content .price .now {
  margin-right: 8px;
  font-size: 14px;
  color: rgb(240, 20, 20);
}
.pro_number{flex: 1; font-size: 0.9em;}

 .foods-wrapper .food-list .food-item .content .price .old {
  font-size: 10px;
  color: rgb(147, 153, 159);
  text-decoration: line-through;
}
